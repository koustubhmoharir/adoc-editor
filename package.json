{
    "name": "adoc-editor",
    "version": "1.0.0",
    "description": "AsciiDoc Editor with Monaco and MobX",
    "type": "module",
    "scripts": {
        "start": "node scripts/inject_welcome.ts && node scripts/build.ts --serve --watch --show-tokens",
        "serve": "node scripts/inject_welcome.ts && node scripts/build.ts --serve",
        "build": "node scripts/inject_welcome.ts && node scripts/build.ts",
        "test": "npx playwright test",
        "test:syntax": "npx playwright test tests/syntax_verification.spec.ts",
        "test:editor": "npx playwright test tests/editor_loading.spec.ts tests/directory_search.spec.ts tests/filesystem_ops.spec.ts",
        "test-debug:syntax": "cross-env DEBUG_TESTS=1 npx playwright test tests/syntax_verification.spec.ts",
        "test-debug:editor": "cross-env DEBUG_TESTS=1 npx playwright test tests/editor_loading.spec.ts tests/directory_search.spec.ts tests/filesystem_ops.spec.ts",
        "test-debug": "cross-env DEBUG_TESTS=1 npx playwright test"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "@vanilla-extract/esbuild-plugin": "^2.3.21",
        "fzf": "^0.5.2",
        "idb-keyval": "^6.2.2",
        "mobx": "^6.10.0",
        "mobx-react-lite": "^4.0.0",
        "monaco-editor": "^0.45.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.3",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/wicg-file-system-access": "^2023.10.7",
        "@vanilla-extract/css": "^1.18.0",
        "asciidoctor": "^3.0.4",
        "cross-env": "^10.1.0",
        "esbuild": "^0.27.2",
        "typescript": "^5.3.0"
    }
}